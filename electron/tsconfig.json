{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "../build/electron",
    "baseUrl": ".",
    "lib": ["ES2020"],
    "typeRoots": [
      "../node_modules/@types",
      "../node_modules/electron"
    ],
    "types": ["node"]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "../src/**/*",
    "../test/**/*"
  ]
}
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./workstation/frontend/*"]
    },
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["electron", "node"],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "electron/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "workstation/frontend/**/*.ts",
    "workstation/frontend/**/*.tsx",
    "workstation/frontend/src/**/*.ts",
    "workstation/frontend/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
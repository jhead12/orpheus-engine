{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./OEW-main/*"]
    },
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "include": [
    "electron/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "OEW-main/**/*.ts",
    "OEW-main/**/*.tsx",
    "orpheus-engine-workstation/frontend/src/**/*.ts",
    "orpheus-engine-workstation/frontend/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
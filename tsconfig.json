{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@orpheus-engine/oew-main/*": ["./OEW-main/*"],
      "@orpheus-engine/components": ["./packages/components/src"],
      "@orpheus-engine/components/*": ["./packages/components/src/*"],
      "@orpheus-engine/components-icons": ["./packages/components/icons/src"],
      "@orpheus-engine/components-icons/*": ["./packages/components/icons/src/*"],
      "@orpheus-engine/contexts": ["./packages/contexts/src"],
      "@orpheus-engine/contexts/*": ["./packages/contexts/src/*"],
      "@orpheus-engine/services/*": ["./packages/services/src/*"]
    },
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "include": [
    "electron/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "OEW-main/**/*.ts",
    "OEW-main/**/*.tsx",
    "orpheus-engine-workstation/frontend/src/**/*.ts",
    "orpheus-engine-workstation/frontend/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
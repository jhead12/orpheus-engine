{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./OEW-main/*"]
    },
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["node", "electron"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "electron/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "OEW-main/**/*.ts",
    "OEW-main/**/*.tsx",
    "workstation/frontend/src/**/*.ts",
    "workstation/frontend/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
{
  "name": "Orpheus Engine",
  "short_name": "Orpheus",
  "description": "Professional Digital Audio Workstation - Browser Edition",
  "version": "1.0.10",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1a1a1a",
  "theme_color": "#6366f1",
  "orientation": "landscape-primary",
  "scope": "/",
  "lang": "en-US",
  "categories": ["music", "multimedia", "productivity"],
  "icons": [
    {
      "src": "/vite.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-192-maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-512-maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "New Project",
      "short_name": "New",
      "description": "Create a new audio project",
      "url": "/?action=new",
      "icons": [
        {
          "src": "/icons/new-project.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Audio Recorder",
      "short_name": "Record",
      "description": "Quick audio recording",
      "url": "/?action=record",
      "icons": [
        {
          "src": "/icons/record.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Orpheus Engine main interface with timeline and mixer"
    },
    {
      "src": "/screenshots/desktop-narrow.png",
      "sizes": "720x1280",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Orpheus Engine mobile interface"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "web",
      "url": "https://orpheus-engine.com"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+orpheus",
      "url": "/?project=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/?open",
      "accept": {
        "audio/*": [".mp3", ".wav", ".ogg", ".m4a", ".flac", ".aac"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/?share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "audioFiles",
          "accept": ["audio/*", ".mp3", ".wav", ".ogg", ".m4a", ".flac", ".aac"]
        }
      ]
    }
  },
  "capture_links": "new-client",
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred"
}

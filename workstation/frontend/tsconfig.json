{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["electron", "node", "react", "react-dom"],
    "typeRoots": [
      "../../node_modules/@types",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@orpheus/*": ["./src/*"],
      "@orpheus/utils/*": ["./src/services/utils/*"],
      "@orpheus/components/*": ["./src/components/*"],
      "@orpheus/services/*": ["./src/services/*"],
      "@orpheus/screens/*": ["./src/screens/*"],
      "@orpheus/contexts/*": ["./src/contexts/*"],
      "@orpheus/types/*": ["./src/types/*"],
      "@orpheus/test/*": ["./src/test/*"],
      "@oew-main/*": ["./OEW-main/src/*"],
      "@oew-main/components/*": ["./OEW-main/src/components/*"],
      "@oew-main/contexts/*": ["./OEW-main/src/contexts/*"],
      "@oew-main/services/*": ["./OEW-main/src/services/*"],
      "@oew-main/types/*": ["./OEW-main/src/types/*"]
    }
  },
  "include": [
    "src/**/*",
    "OEW-main/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.bak/**",
    "src/**/*.bak/**"
  ]
}

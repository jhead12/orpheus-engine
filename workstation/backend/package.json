{
  "name": "orpheus-engine-backend",
  "version": "1.0.18",
  "private": true,
  "description": "Backend services for Orpheus Engine, including monitoring and future integrations (Helia, Ceramic, etc.)",
  "scripts": {
    "start:monitor": "FLASK_APP=monitor_api.py FLASK_ENV=development python -m flask run --port 8000",
    "start:express": "node src/server.js",
    "dev:express": "nodemon src/server.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "build": "echo 'No build step for backend.'"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
